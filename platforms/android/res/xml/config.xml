<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.speaklikeabrazilian" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <name>SpeakLikeABrazilian</name>
    <description>
        App to share Brazilian Portuguese common expressions and slangs with foreigners.
    </description>
    <author email="slbr@tupilabs.com" href="http://speaklikeabrazilian.com">
        The Speak Like A Brazilian team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
